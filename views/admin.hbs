<div class="files bg-white">
    <div class="container mt-2">
        <div class="row text-center p-5" style="height: auto">
            <div class="col-3 m-auto">
            <span class="blacktext">Subida de articulos</span>
            <a href="/admin/alta">
            <br>
            <i style="font-size:5em; cursor:pointer" class="fas fa-plus yellowtext mt-3" data-toggle="tooltip" data-placement="top" title="Agregar un articulo"></i>
            </a>
            </div>
        <div class="col-7 m-auto">
            <table class="table text-center">
                <thead>
                    
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Categoria</th>
                    <th>Precio</th>
                    <th>Editar</th>
                    <th>Borrar</th>
                </thead>

                <tbody>
                    {{#each articulos_array}}
                    <tr>
                        <td>{{id_a}}</td>
                        <td>{{nombre}}</td>
                        <td>{{categorias}}</td>
                        <td>{{precio}}</td>
                        <td>
                            <a href="/admin/editar/{{id_a}}">
                            <i class="fas fa-pencil-alt bluetext"></i>
                            </a>
                            </td>
                        {{!-- delete, update -> where  --}}
                        <td>
                            <a href="/admin/eliminar/{{id_a}}">
                                <i class="fas fa-times pinktext"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>
