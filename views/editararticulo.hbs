<div class="editar bg-white">
<div class="container mt-2">
    <div class="row" style="height: auto;">
        <div class="col-8 m-auto">
            <h5 class="text-center">Editar articulo</h5>
            <form action="/admin/editar" method="post">
            <input type="text" value="{{idURL}}">
            {{#each articulo_array}}
            <input type="hidden" value="{{id_a}}" name="id_a">
            <small class="blacktext">En la categoria : {{categoria}}</small>

                <div class="form-group">
                    <label for="nombre">Nombre del articulo</label>
                    <input type="text" class="form-control" 
                    value="{{nombre}}" name="nombre" id="nombre">

                </div>

                <div class="form-group">
                    <label class="text-info">Precio : {{precio}}</label>
                    <input type="text" class="form-control" 
                    value="{{precio}}" name="precio" id="precio">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="descripcion">{{descripcion}}</textarea>
                </div>
                
                <div class="form-group">
                    <input type="file" name="imagen">{{imagen}}
                </div>
            {{/each}}
                <button type="submit" class="btn btn-primary btn-block">Editar</button>
            </form>
        </div>
    </div>
</div>
</div> 