  
<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <h5 class="text-center">Editar articulo</h5>
            <form action="/admin/editar" method="post">
            {{!-- <input type="text" value="{{idURL}}"> --}}
            {{#each noticia_array}}
            <input type="hidden" value="{{id_n}}" name="id_n">
