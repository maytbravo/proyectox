                    {{!-- 
                    tarea : poder elegir nuevamente un autor 
                    --}}
                </div>
                <div class="form-group">
                    <textarea class="form-control"  name="texto">{{texto}}</textarea>
                </div>
                {{!-- mostrar imagen --}}
                {{!-- <div class="form-group">
                    <input type="file" name="imagen">
                </div> --}}
            {{/each}}
